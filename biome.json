{
  "$schema": "./node_modules/biome/configuration_schema.json",
  "files": {
    "ignore": [
      "./scripts/biome-staged.js",
      "./packages",
      "**/dist",
      "**/*.json"
    ]
  },
  "linter": {
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true
      },
      "complexity": {
        "recommended": true,
        "noUselessFragments": "error"
      },
      "correctness": {
        "recommended": true,
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error"
      },
      "performance": {
        "recommended": true
      },
      "security": {
        "recommended": true
      },
      "style": {
        "recommended": true,
        "noShoutyConstants": "error",
        "useBlockStatements": "error",
        "useFragmentSyntax": "error",
        "useShorthandArrayType": "error"
      },
      "suspicious": {
        "recommended": true
      }
    }
  },
  "formatter": {
    "formatWithErrors": true,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    },
    "globals": [
      "$",
      "argv",
      "Cause",
      "Context",
      "Effect",
      "Layer",
      "Tag",
      "it",
      "expect",
      "describe",
      "fail"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
